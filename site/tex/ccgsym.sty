\usepackage{amsmath}
\usepackage{etoolbox}
\usepackage{suffix}

% basic categories
\newcommand{\catS}[1][]{\operatorname{S}\ifstrempty{#1}{}{[\operatorname{#1}]}}
\newcommand{\catNP}{\operatorname{NP}}
\newcommand{\catN}{\operatorname{N}}
\newcommand{\catPP}{\operatorname{PP}}
\newcommand{\catPR}{\operatorname{PR}}

% backslash
\newcommand{\?}{\backslash}

% shorthands for common complex categories
\newcommand{\catIV}[1][]{\catS[#1]\?\catNP}
\newcommand{\catTV}[1][]{(\catIV[#1])/\catNP}
\WithSuffix\newcommand\catTV*[1][]{(\catIV[#1])/\catPP}
\newcommand{\catIVmod}{(\catIV)\?(\catIV)}
\WithSuffix\newcommand\catDTV*[1][]{(\catTV*[#1])/\catNP}
\newcommand{\catDET}{\catNP/\catN}
\newcommand{\catNrmod}{\catN\?\catN}
\newcommand{\catconj}{\operatorname{conj}}

% shorthands for modifiers and conjunctions
\newcommand{\lmod}[1]{(#1)/(#1)}
\WithSuffix\newcommand\lmod*[1]{#1/#1}
\newcommand{\rmod}[1]{(#1)\?(#1)}
\WithSuffix\newcommand\rmod*[1]{#1\?#1}
\newcommand{\emod}[1]{(#1)|(#1)}
\WithSuffix\newcommand\emod*[1]{#1|#1}
\newcommand{\conj}[1]{(\rmod{#1})/(#1)}
\WithSuffix\newcommand\conj*[1]{(\rmod*{#1})/#1}

% type raising
\newcommand{\ftr}[2]{#1/(#1\?#2)}
\newcommand{\btr}[2]{#1\?(#1/#2)}

% combinator symbols
\newcommand{\FC}[1]{>^{#1}}
\newcommand{\FXC}[1]{>_\times^{#1}}
\newcommand{\BC}[1]{<^{#1}}
\newcommand{\BXC}[1]{<_\times^{#1}}
\newcommand{\FTR}{T^>}
\newcommand{\BTR}{T^<}
\newcommand{\TC}{*}

% math formatting shorthands
\newcommand{\on}[1]{\operatorname{#1}}
\newcommand{\mb}[1]{\mathbf{#1}}
\newcommand{\mi}[1]{\mathit{#1}}

% semantics
\newcommand{\sy}[1]{\mi{#1}'}
